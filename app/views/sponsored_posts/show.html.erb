<h1><%= @sponsored_post.title %></h1>
<div class="row">
  <div class="col-md-8">
    <p><%= @sponsored_post.body%> </p>
  </div>
  <div class="col-md-8">
    <p>$<%= @sponsored_post.price %></p>
  </div>
  <% if user_is_authorized_for_sponsored_post?(@sponsored_post) %>
  <div class="col-md-4">
    <%= link_to "Edit Sponsored Post", edit_topic_sponsored_post_path(@sponsored_post), class: 'btn-btn-primary' %> <br>
    <%= link_to "Delete Sponsored Post", [@sponsored_post.topic, @sponsored_post], method: :delete, class: 'btn-btn-danger',
     data: {confirm: 'Are you sure you want to delete this sponsored_post?'}%> <br>
    <%= link_to "New Sponsored Post", new_topic_sponsored_post_path, class: 'btn-btn-primary' %>
  </div>
  <% end %>
