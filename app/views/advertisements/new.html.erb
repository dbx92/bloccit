  <div class="col-md-8">
      <%= form_for @advertisement do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control', placeholder: "Enter ad here", required: true %>
  </div>
  <div class="form-group">
    <%= f.label :copy %>
    <%= f.text_area :copy, rows: 8, class: 'form-control', placeholder: "Enter ad body", required: true %>
  </div>
  <div class="form-group">
    <%= f.label :price %>
    <%= f.number_field :price, class: 'form-control', placeholder: 99, required: true %>
  </div>
  <%= f.submit "Save", class: 'btn btn-success' %>
</div>
<% end %>
