<h1><%= @topic.name %></h1>
<% if current_user %>
<div class="col-md-4">
  <%= link_to "New Post", new_topic_post_path(@topic), class: 'btn btn-success' %>
</div>
<% end %>
<div class="row">
  <div class="col-md-8">
    <p class="lead"><%= @topic.description %></p>
    <% @topic.posts.each do |post| %>
     <%= render post %>
     <%= render partial: 'votes/voting', locals: { post:post } %>
    <% end %>
    <% @topic.sponsored_posts.each do |sponsored_post| %>
      <%= render sponsored_post %>
    <% end %>
  </div>
  <% if user_is_authorized_for_topics? || user_is_a_moderator? %>
  <div class="col-md-4">
     <%= link_to "Edit Topic", edit_topic_path, class: 'btn btn-success' %>
     <% if user_is_authorized_for_topics? %>
    <%= link_to "Delete Topic", @topic,
    method: :delete, class: 'btn btn-danger',
    data: { confirm: 'Are you sure you want to delete this topic?' } %>
    <% end %>
  </div>
  <% end %>
</div>
