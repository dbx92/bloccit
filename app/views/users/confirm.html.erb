<h1>Confirm User Credentials</h1>
<div class="row">
  <div class="col-md-4">
    <h3>Username: <%= @user.name %></h3>
    <h4>Email: <%= @user.email %></h4>
    <%= button_to "Yes", { controller: "users", action: "create", params: { user: user_params } }, class: 'btn btn-success' %>
    <%= link_to "No", new_user_path, class: 'btn btn-danger' %>
  </div>
</div>
